! █▓▒░ fonts
urxvt*font: xft:FiraCode-Medium:size=10:antialias=true
urxvt*boldFont: xft:FiraCode-Medium:size=10:antialias=true
urxvt*lineSpace: -1

! █▓▒░ interface
urxvt*scrollBar: false
urxvt*transparent: false
!urxvt*shading: 38

! █▓▒░ clipboard
urxvt.perl-ext-common: default,clipboard,keyboard-select,selection-to-clipboard
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
!urxvt.keysym.M-Escape: perl:keyboard-select:activate
!urxvt.keysym.M-c:   perl:clipboard:copy
!urxvt.keysym.C-v:   perl:clipboard:paste
!urxvt.keysym.M-C-v: perl:clipboard:paste_escaped
urxvt.clipboard.copycmd:  xsel -ib
urxvt.clipboard.pastecmd: xsel -ob

URxvt*depth: 32
URxvt*dynamicColors: on
URxvt*cursorBlink: true

! █▓▒░ misc
urxvt.saveLines: 4095
urxvt.iso14755: false
!URxvt*altSendsEscape: true

